<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.MaBN)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MaBN)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.MaPhieu)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MaPhieu)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        @if (Model.Sex == 1)
        {
            <dd class="col-sm-8">
                Nam
            </dd>
        }else{
        <dd class="col-sm-8">
            Nữ
        </dd>
        }

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Cp)
