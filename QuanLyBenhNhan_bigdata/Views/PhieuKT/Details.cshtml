        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.OldPeak)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.OldPeak)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Slope)
        </dt>
        @if (Model.Slope == 1)
        {
    <dd class="col-sm-8">
        Tăng lên
    </dd>
        }else if(Model.Slope == 2){
    <dd class="col-sm-8">
        Bằng phẳng
    </dd>

        }else{
    <dd class="col-sm-8">
        Dốc xuống
    </dd>
        }
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Ca)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Ca)
        </dd>
