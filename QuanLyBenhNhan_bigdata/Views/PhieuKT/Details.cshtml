        Có
    </dd>
            }
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Probability)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Probability)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
